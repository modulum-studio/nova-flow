---
import { getCurrentLanguage, createTranslator, type Language } from '../utils/i18n';

const currentLang = (Astro.currentLocale as Language) || 'en';
const t = createTranslator(currentLang);
---

<footer class="bg-gray-900 dark:bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
          </div>
          <span class="text-2xl font-bold">NovaFlow</span>
        </div>
        <p class="text-gray-400 mb-6 max-w-md" data-i18n="footer.description">
          {t('footer.description')}
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.112.221.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.749-1.378 0 0-.599 2.282-.744 2.840-.282 1.084-1.064 2.456-1.549 3.235C9.584 23.815 10.77 24.001 12.017 24.001c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.017z.001"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4" data-i18n="footer.product">{t('footer.product')}</h3>
        <ul class="space-y-2">
          <li><a href="#features" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.features">{t('footer.features')}</a></li>
          <li><a href="#pricing" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.pricing">{t('footer.pricing')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.integrations">{t('footer.integrations')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.api">{t('footer.api')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.mobileApps">{t('footer.mobileApps')}</a></li>
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4" data-i18n="footer.company">{t('footer.company')}</h3>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.about">{t('footer.about')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.blog">{t('footer.blog')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.careers">{t('footer.careers')}</a></li>
          <li><a href="#contact" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.contact">{t('footer.contact')}</a></li>
          <li><a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.press">{t('footer.press')}</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm mb-4 md:mb-0">
          Â© 2024 NovaFlow. <span data-i18n="footer.allRightsReserved">{t('footer.allRightsReserved')}</span>
        </div>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.privacyPolicy">{t('footer.privacyPolicy')}</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.termsOfService">{t('footer.termsOfService')}</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-i18n="footer.cookiePolicy">{t('footer.cookiePolicy')}</a>
        </div>
      </div>
    </div>
  </div>
</footer>
